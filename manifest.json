{
  "manifest_version": 2,

  "name": "Ansel",
  "description": "This extension produces a snapshot delta of the current week in Panorama",
  "version": "0.2",

  "browser_action": {
    "default_icon": "images/ansel-icon.png",
    "default_title": "Ansel - Get Panorama Deltas"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "https://panorama.pivotal.io/staffing",
    "storage"
  ]
}
